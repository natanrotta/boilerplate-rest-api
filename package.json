{
  "name": "boilerplate-rest-api",
  "version": "1.0.0",
  "description": "A REST API boilerplate with TypeScript, Express, Prisma, and more.",
  "main": "dist/server.js",
  "author": "natanrotta",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "prisma:deploy": "npx prisma migrate deploy --schema=prisma/schema.prisma",
    "prisma:generate": "npx prisma generate",
    "up": "docker-compose up",
    "down": "docker-compose down",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma:reset": "docker-compose exec app npx prisma migrate reset --force",
    "prisma:migrate:reset": "docker-compose exec app npx prisma migrate reset --force",
    "prisma:migrate": "docker-compose exec app npx prisma migrate dev --name",
    "prisma:sync": "npx prisma generate",
    "test": "vitest",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "@types/bcrypt": "^5.0.2",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "ioredis": "^5.6.1",
    "node-cron": "^3.0.3",
    "pino": "^9.11.0",
    "pino-http": "^10.5.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.15.21",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.27.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.5.3",
    "prisma": "^6.6.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}