{
  "name": "boilerplate-rest-api",
  "version": "2.0.0",
  "description": "A Clean Architecture REST API boilerplate with TypeScript, Express, Prisma, and Dependency Injection.",
  "main": "dist/main.js",
  "author": "natanrotta",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "prisma:deploy": "prisma migrate deploy --schema=prisma/schema.prisma",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name",
    "prisma:reset": "prisma migrate reset --force",
    "prisma:studio": "prisma studio",
    "up": "docker-compose up",
    "down": "docker-compose down",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "ioredis": "^5.6.1",
    "node-cron": "^3.0.3",
    "pino": "^9.11.0",
    "pino-http": "^10.5.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.8.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.15.21",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.5.3",
    "prisma": "^6.6.0",
    "tsx": "^4.19.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}